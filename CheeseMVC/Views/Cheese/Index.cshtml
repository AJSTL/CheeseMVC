@using CheeseMVC.Models
@model List<Cheese>

<link rel="stylesheet" href="~/css/site.css" />

<h1>@ViewBag.Title</h1>

<p><a asp-controller="Cheese" asp-action="Add">Add Cheese?</a></p>

@if (Model.Count == 0) // note: uppercase Model
{
    <p>No cheeses found.</p>
}


<table class="table">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Type</th>
    </tr>

    @foreach (var cheese in Model) //(object cheese in ViewBag.Cheeses)
    {
        // <li>@cheese</li>; // this works and displays [name, description] in brackets
        //<li>@cheese.Key: @cheese.Value</li>

        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Type</td>
        </tr>
    }
</table>



